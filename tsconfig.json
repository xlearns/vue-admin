{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    // 重点否则全局d.ts不生效
    "typeRoots": ["./node_modules/@types/", "./types"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/*.d.ts",
    "mock/*.ts",
    "vite.config.ts",
    "build/**/*.ts",
    "build/**/*.d.ts",
  ],
  "exclude": ["node_modules", "dist", "**/*.js"]
}
